@page "/Reservations/Create"
@model AutoNomā.Pages.Reservations.CreateModel

@{
    ViewData["Title"] = "Veikt rezervāciju";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <h2 class="mb-4 text-center">Veikt rezervāciju</h2>

        <form method="post" class="border p-4 shadow rounded bg-light">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="AutoId" class="form-label">Izvēlieties automašīnu</label>
                <select id="AutoId" name="Rezervācija.AutoId" class="form-select" required>
                    <option value="">-- Izvēlieties --</option>
                    @foreach (var car in Model.Cars)
                    {
                        <option value="@car.Id">@car.Marka @car.Modelis (@car.Gads)</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label for="StartDate" class="form-label">Sākuma datums</label>
                <input id="StartDate" name="Rezervācija.StartDate" type="date" class="form-control" required />
            </div>

            <div class="mb-3">
                <label for="EndDate" class="form-label">Beigu datums</label>
                <input id="EndDate" name="Rezervācija.EndDate" type="date" class="form-control" required />
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">✅ Veikt rezervāciju</button>
            </div>
        </form>
    </div>
</div>
