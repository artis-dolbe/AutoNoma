@page
@functions {
    public bool IsPost => HttpContext.Request.Method == "POST";
}

<h2>Vienkāršs POST tests</h2>

<form method="post">
    <button type="submit">Nosūtīt POST</button>
</form>

@if (IsPost)
{
    <p>✅ POST pieprasījums tika saņemts!</p>
}
else
{
    <p>🟡 GET režīms – forma vēl nav nosūtīta.</p>
}

